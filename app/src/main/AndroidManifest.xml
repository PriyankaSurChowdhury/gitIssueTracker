<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.task.priyanka.gitIssueTracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_github"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_github"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.task.priyanka.gitIssueTracker.activity.CommentsActivity"/>
        <activity
            android:name="com.task.priyanka.gitIssueTracker.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.task.priyanka.gitIssueTracker.activity.IssueActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name="com.task.priyanka.gitIssueTracker.service.UpdateIssueDataService"/>

    </application>

</manifest>